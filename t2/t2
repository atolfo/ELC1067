#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void le_alunos(int* matriculas, char** nomes, int* n){
    int mat;
    char c;
    char *nome;
    int i;
    int linha;

    nome=(char*)malloc(50*sizeof(char));
    FILE*f = fopen("alunos.txt", "r");
    linha = 0;
    while(feof(f) == 0){
        if(fscanf(f, "%d", &mat) < 0)
        break;
        i = 0;
        c = fgetc(f);
        while(c != '\n' && feof(f)==0)
        {
            nome[i] = c;
            c = fgetc(f);
            i++;
        }
        nome[i] = '\0';
        matriculas[linha]=mat;
        nomes=(char*)malloc((strlen(nome)+1)*sizeof(char));
        strcpy(nomes[linha],nome);
        linha++;
    }
    fclose(f);
}

void le_notas (float *medias){
    int i=0,mat;
    float n1,n2;
    FILE*f = fopen("notas.txt", "r");
    while(feof(f) == 0){
        if(fscanf(f, "%d %f %f\n", &mat, &n1, &n2) <= 0)
        {
            break;
        }

        medias[i]=(n1+n2)/2;
        i++;
    }
    fclose(f);
}

void procura_aluno (char* nome, char* nomes, int* n, float* medias){
    int i=0;
    for(i = 0; i<n; i++)
    {
        if(strstr(nomes[i], nome)!=NULL)
        {
            printf("%f %s\n", medias[i], nomes[i]);
        }
    }
    return;
}

int main(int argc, char** argv)
{
    int i,*n,*matriculas
    char *nome;
    medias=(float*)malloc(50*sizeof(float));
    n=matriculas =(int*)malloc(50*sizeof(int));
    nomes=(char**)malloc(50*sizeof(char*));
    if(nome==NULL || medias==NULL ||matriculas==NULL || n==NULL)
    {
        printf("\nProblemas com alocação de memoria, o programa será finalizado.\n");
        exit(1);
    }
    if(argc > 1)
    {
        nome = argv[1];
    }
    printf("%s \n", nome);
    procura_aluno(matriculas,nomes,n);
    le_notas(medias);
    le_alunos(nome,nomes,n,medias);
    free(nome);
    free(medias);
    free(matriculas);
    free(n);
    free(nomes);
    for(i=0;i<*n;i++)
    {
        free(nomes[i]);
    }
    free(nomes);

}
