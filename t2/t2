#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void le_alunos(int* matricula, char** nomes, int* n)
{
    int mat;
    char c;
    char *nome;
    int i;
    int linha;

    nome=(char*)malloc(50*sizeof(char));
    if(nome == NULL)
    {
        printf("\nProblemas com alocacao de memoria, o prorama sera finalizado.\n");
        exit(1);
    }
    FILE*f = fopen("alunos.txt", "r");
    linha = 0;

    while(feof(f) == 0)
    {
        if(fscanf(f, "%d", &mat) <= 0)
        break;

        i = 0;
        c = fgetc(f);
        while(c != '\n' && feof(f)==0)
        {
            nome[i] = c;
            c = fgetc(f);
            i++;
        }
        nome[i] = '\0';
        matricula[linha]=mat;
        nomes[linha]=(char*)malloc((strlen(nome)+1)*sizeof(char));
        strcpy(nomes[linha],nome);
        linha++;
    }
}

void le_notas (float *medias)
{
    int i=0,mat;
    float z1,z2;
    FILE*f = fopen("notas.txt", "r");
    while(feof(f) == 0)
    {
        if(fscanf(f, "%d %f %f\n", &mat, &z1, &z2) <= 0)
        {
            break;
        }
        medias[i]=(z1+z2)/2;
        i++;
    }
    fclose(f);
}

void procura_aluno (char* nome, char** nomes, float* medias, int* n)
{
    int i;
    for(i = 0; i<*n; i++)
    {
        if(strstr(nomes[i], nome)!= NULL)
        {
            printf("%f %s\n", medias[i], nomes[i]);
        }
    }
}

int main(int argc, char** argv)
{
    int cont,*n;
    int *matricula;
    float *medias;
    char** nomes;
    char *nome;
    medias=(float*)malloc(50*sizeof(float));
    n=matricula =(int*)malloc(50*sizeof(int));
    nomes=(char**)malloc(50*sizeof(char*));
    if(nomes == NULL || medias == NULL ||matricula == NULL || n == NULL)
    {
        printf("\nProblemas com alocacao de memoria, o programa sera finalizado.\n");
        exit(1);
    }
    if(argc > 1)
    {
        nome = argv[1];
    }
    printf("%s \n", nome);
    le_aluno(matricula,nomes,n);
    le_notas(medias);
    le_alunos(nome,nomes,n,medias);
    free(nome);
    free(medias);
    free(matricula);
    free(n);
    free(nomes);
    for(cont=0;cont<*n;cont++)
    {
        free(nomes[cont]);
    }
    free(nomes);

}
