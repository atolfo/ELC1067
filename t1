#include <stdio.h>
#include <stdlib.h>

    void le.alunos (int* matriculas, char** nomes, int* n);
     {
        FILE *f = fopen ("aluno.txt","r"); int mat,i,linha; char c; char nome[50];

        linha=0;

        while (feof(f) != 0)
        {
            fscanf (f "%d", &mat);
            i=0 ;
            c= fgetc(f);
        }

        while (c== ' ')
        {
            c= fgetc (f);
        }

        while (c != '\n')
        {
            nome[i] = c;
            c= fgetc(f);
            i++;

            nome[i]= '\0';
            matriculas[linha]= mat;
            linha++;
        }
        n= linha;
        fclose(f);
     }
}

int main (int argc, char **argv)
{
    char *nome ;

    if (argc>1)
    {
        nome=argv[1] ;
    }
    printf ("%s\n", nome);

    int matricula[50];
    char nomes[50][50];
    int n;
    le.alunos (matriculas,nomes, &n);
}

